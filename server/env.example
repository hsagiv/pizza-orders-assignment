# Pizza Order Management System - Environment Configuration
# Copy this file to .env and update the values for your environment

# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pizza_orders
DB_USER=pizza_user
DB_PASSWORD=pizza_password
DB_URL=postgresql://pizza_user:pizza_password@localhost:5432/pizza_orders

# Database Connection Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_ACQUIRE_TIMEOUT=60000

# WebSocket Configuration
WS_PORT=3002
WS_CORS_ORIGIN=http://localhost:3000

# Application Settings
API_PREFIX=/api
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Security
JWT_SECRET=your-super-secret-jwt-key-here
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Data Polling Configuration (for real-time updates)
POLLING_INTERVAL_MS=5000
MAX_POLLING_RETRIES=3
POLLING_TIMEOUT_MS=10000
